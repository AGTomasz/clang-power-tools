<Window
  x:Class="ClangPowerTools.MVVM.Views.FormatOptionsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DataContext="{d:DesignInstance local:FormatOptionsViewModel,
                                   IsDesignTimeCreatable=True}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">

  <!--  Static resources  -->
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/AppResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>

  <Grid>
    <ListBox ItemsSource="{Binding ToggleFormatOptions}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid>

            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="500" />
              <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <TextBlock
              Grid.Row="1"
              Grid.Column="0"
              FontSize="14"
              Text="{Binding Name}"
              TextWrapping="Wrap">
              <TextBlock.ToolTip>
                <ToolTip>
                  <TextBlock
                    Width="400"
                    Text="{Binding Description}"
                    TextWrapping="Wrap" />
                </ToolTip>
              </TextBlock.ToolTip>
            </TextBlock>

            <ToggleButton
              Grid.Row="1"
              Grid.Column="1"
              HorizontalAlignment="Right"
              IsChecked="{Binding IsEnabled}" />

          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>


  </Grid>
</Window>
