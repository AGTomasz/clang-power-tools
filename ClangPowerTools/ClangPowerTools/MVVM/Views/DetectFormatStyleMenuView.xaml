<Window
  x:Class="ClangPowerTools.MVVM.Views.DetectFormatStyleMenuView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:ClangPowerTools.MVVM.Views.Components"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Clang Format Style"
  Width="525"
  Height="400"
  d:DataContext="{d:DesignInstance local:InputDataViewModel,
                                   IsDesignTimeCreatable=True}"
  Icon="pack://application:,,,/ClangPowerTools;component/Resources/ClangPowerToolsIco.ico"
  ResizeMode="NoResize"
  WindowStartupLocation="CenterScreen"
  WindowStyle="ThreeDBorderWindow"
  mc:Ignorable="d">

  <controls:InputList
    x:Name="InputList"
    AddCommand="{Binding AddCommand}"
    Collection="{Binding Inputs, Mode=TwoWay}"
    ImageTag="browse"
    InputToAdd="{Binding InputToAdd, Mode=TwoWay}" />

</Window>