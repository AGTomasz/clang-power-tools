<Window 
  x:Class="ClangPowerTools.MVVM.Views.CMakeBetaWarning"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:ClangPowerTools.MVVM.Views" xmlns:components="clr-namespace:ClangPowerTools.MVVM.Views.Components"
  mc:Ignorable="d" 
  Title="Warning"
  Width="650"
  Height="450"
  Icon="pack://application:,,,/ClangPowerTools;component/Resources/ClangPowerToolsIco.ico"
  ResizeMode="NoResize"
  Topmost="True"
  WindowStartupLocation="CenterScreen"
  WindowStyle="ThreeDBorderWindow">

  <!--  Static resources  -->
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/AppResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="50" />
    </Grid.RowDefinitions>

    <components:MessageBanner
      Grid.Row="0"
      Banner="/ClangPowerTools;component/Resources/BannerWarning.png"
      Icon="/ClangPowerTools;component/Resources/WarningIcon.png"
      Type="CMake Beta support" />

    <StackPanel Grid.Row="1" Margin="20">
      <TextBlock
        Margin="0,5"
        FontSize="14"
        Text="We are happy to announce to you that the CMake support is now in the BETA stage."
        TextWrapping="Wrap" />

      <TextBlock
        Margin="0,5"
        FontSize="14"
        Text="More detalis about how to send feedback"
        TextWrapping="Wrap" />

      <CheckBox 
        Margin="0 100 0 0" 
        Content="Don't show this again." 
        Checked="CheckBox_Checked" 
        Unchecked="CheckBox_Unchecked" />
    </StackPanel>

    <Button
      Grid.Row="2"
      Width="100"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Click="ContinueButton_Click"
      Content="Continue"
      FontSize="14"
      Foreground="White"
      Style="{StaticResource SettingsButton}" />

  </Grid>
</Window>
