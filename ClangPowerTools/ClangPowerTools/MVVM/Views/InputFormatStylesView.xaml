<Window
  x:Class="ClangPowerTools.Views.InputFormatStylesView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Input"
  Width="525"
  Height="400"
  d:DataContext="{d:DesignInstance local:InputFormatStylesViewModel,
                                   IsDesignTimeCreatable=True}"
  Background="WhiteSmoke"
  Icon="/ClangPowerTools;component/Resources/ClangPowerToolsIco.ico"
  ShowInTaskbar="False"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">
  <Grid>
    <TextBox
      Name="CodeEditor"
      Grid.Row="0"
      MinWidth="400"
      MinHeight="400"
      AcceptsReturn="True"
      AcceptsTab="True"
      FontFamily="Courier New"
      FontSize="14"
      HorizontalScrollBarVisibility="Auto"
      TextWrapping="NoWrap"
      VerticalScrollBarVisibility="Auto" />
  </Grid>
</Window>
