<UserControl
  x:Class="ClangPowerTools.MVVM.Views.ToggleSwitch"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools.MVVM.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="60"
  d:DesignWidth="100"
  mc:Ignorable="d">
  <Viewbox Margin="0" HorizontalAlignment="Right">
    <Grid
      Width="100"
      Height="60"
      Margin="0"
      HorizontalAlignment="Left"
      VerticalAlignment="Top">
      <Rectangle
        x:Name="Back"
        Width="96"
        Height="56"
        Margin="2,2,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Fill="#FFA0A0A0"
        MouseLeftButtonDown="Back_MouseLeftButtonDown"
        RadiusX="30"
        RadiusY="30">

        <Rectangle.InputBindings>
          <MouseBinding Command="{Binding FooCommand}" Gesture="LeftClick" />
        </Rectangle.InputBindings>

      </Rectangle>
      <Ellipse
        x:Name="Dot"
        Width="50"
        Height="50"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Fill="White"
        MouseLeftButtonDown="Dot_MouseLeftButtonDown" />
    </Grid>

  </Viewbox>
</UserControl>
