<UserControl
  x:Class="ClangPowerTools.Views.AccountView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DataContext="{d:DesignInstance local:AccountViewModel,
                                   IsDesignTimeCreatable=True}"
  d:DesignHeight="460"
  d:DesignWidth="770"
  mc:Ignorable="d">

  <!--  Static resources  -->
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/AppResources.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid>
    <Grid.Background>
      <ImageBrush ImageSource="/ClangPowerTools;component/Resources/SettingsBackground.png" Stretch="UniformToFill" />
    </Grid.Background>
    <Grid.RowDefinitions>
      <RowDefinition Height="20" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="135" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="auto" />
    </Grid.ColumnDefinitions>

    <StackPanel
      Grid.Row="1"
      Grid.Column="1"
      Orientation="Horizontal">
      <Ellipse
        Width="80"
        Height="80"
        Margin="10,0">
        <Ellipse.Fill>
          <ImageBrush
            AlignmentX="Center"
            AlignmentY="Center"
            ImageSource="{StaticResource AccountProfileIcon}" />
        </Ellipse.Fill>
      </Ellipse>
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="auto" />
          <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
          Grid.Row="0"
          Width="180"
          Padding="10"
          VerticalAlignment="Center"
          FontFamily="SegoeUI"
          FontSize="16"
          Text="User Name" />
        <TextBlock
          Grid.Row="1"
          Width="180"
          Padding="10"
          VerticalAlignment="Center"
          FontFamily="SegoeUI"
          FontSize="16"
          Text="Email" />
      </Grid>
    </StackPanel>

    <Separator
      Grid.Row="2"
      Grid.Column="1"
      Width="670"
      Margin="20,20"
      Background="#9E005A" />

    <TextBlock
      Grid.Row="3"
      Grid.Column="1"
      Width="180"
      Padding="10"
      HorizontalAlignment="Left"
      VerticalAlignment="Center"
      FontFamily="SegoeUI"
      FontSize="16"
      Text="License Type" />

    <TextBlock
      Grid.Row="4"
      Grid.Column="1"
      Width="180"
      Padding="10"
      HorizontalAlignment="Left"
      VerticalAlignment="Center"
      FontFamily="SegoeUI"
      FontSize="16"
      Text="Expiration date" />

    <Separator
      Grid.Row="5"
      Grid.Column="1"
      Width="670"
      Margin="0,20"
      Background="#9E005A" />

    <TextBlock
      Grid.Row="6"
      Grid.Column="1"
      Width="180"
      Padding="10"
      HorizontalAlignment="Left"
      VerticalAlignment="Center"
      FontFamily="SegoeUI"
      FontSize="16"
      Text="Version 6.1" />

    <Separator
      Grid.Row="7"
      Grid.Column="1"
      Width="670"
      Margin="0,20"
      Background="#9E005A" />

    <Button
      Grid.Row="8"
      Grid.Column="1"
      Width="130"
      Height="40"
      Margin="10,0,0,0"
      HorizontalAlignment="Left"
      VerticalAlignment="Center"
      Command="{Binding CompileFlagsAddDataCommand}"
      Style="{StaticResource SettingsButton}">
      <Button.Content>
        <StackPanel Orientation="Horizontal">
          <Image Source="{StaticResource AccountProfileIcon}" />
          <TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="SegoeUI"
            FontSize="16"
            Foreground="White"
            Text="Logout" />
        </StackPanel>
      </Button.Content>
    </Button>

  </Grid>
</UserControl>
